<UserControl x:Class="LibraryApp.Controls.BranchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="700">
    <Border BorderBrush="#27496d" BorderThickness="2">
        <Grid Background="#e8f1f5" >
            <StackPanel Margin="5" >
                <TextBlock x:Name="NameTextBlock"
                       Text="Name" FontSize="20"
                       FontWeight="Bold"
                       AutomationProperties.AutomationId="BranchNameControl"/>
                <TextBlock x:Name="AddressTextBlock"
                       Text="Address " FontSize="15"
                       Foreground="Black"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
