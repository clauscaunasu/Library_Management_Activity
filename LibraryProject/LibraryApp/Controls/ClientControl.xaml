<UserControl x:Class="LibraryApp.View.ClientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Border BorderBrush="#27496d" BorderThickness="2">
    <Grid Background="#e8f1f5">
        <StackPanel Margin="5">
            <TextBlock x:Name="NameTextBlock"
                       Text="Name Lastname" FontSize="25"
                       FontWeight="Bold"
                       TextAlignment="Center"/>
            <TextBlock x:Name="EmailTextBlock"
                       Text="example@domain.com" FontSize="20"
                       Foreground="Black"
                       TextAlignment="Center"/>
            <TextBlock x:Name="PhoneTextBlock"
                       Text="(123) 456 7890" FontSize="20"
                       FontStyle="Italic"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
    </Border>
</UserControl>