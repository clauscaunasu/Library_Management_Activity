<UserControl x:Class="LibraryApp.Controls.MoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="In branch:"
                   FontSize="14"/>
            <TextBlock x:Name="BranchNameTextBlock"
                       Text="Name  " FontSize="14"
                       Margin="4 4"/>
            <TextBlock x:Name="QuantityTextBlock"
                       Text=" X " FontSize="14"
                       Margin="0 4"
                       FontWeight="ExtraBold"/>
            <Label Content="copies available"
                   FontSize="14"/>
        </StackPanel>

    </Grid>
</UserControl>