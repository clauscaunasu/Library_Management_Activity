<UserControl x:Class="LibraryApp.View.BookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#004a7c">
        <StackPanel Margin="5">
            <TextBlock x:Name="NameTextBlock"
                       Text="Name Lastname" FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBlock"
                       Text="example@domain.com" FontSize="15"
                       Foreground="Black"/>
            <TextBlock x:Name="phoneTextBlock"
                       Text="(123) 456 7890" FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>

