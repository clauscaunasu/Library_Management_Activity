<UserControl x:Class="LibraryApp.View.BookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Border BorderBrush="#27496d" BorderThickness="2">
    <Grid Background="#e8f1f5" >
        <StackPanel Margin="5" >
            <TextBlock x:Name="TitleTextBlock"
                       Text="Title" FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock x:Name="IsbnTextBlock"
                       Text="87-23-90157-8 " FontSize="15"
                       Foreground="Black"/>
            <TextBlock x:Name="AuthorTextBlock"
                       Text="Firstname Lastname" FontSize="15"
                       FontStyle="Italic"/>
            <TextBlock x:Name="EditureTextBlock"
                       Text="Publisher" FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
    </Border>
</UserControl>

